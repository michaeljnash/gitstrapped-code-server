{
  "name": "codestrap",
  "displayName": "Codestrap",
  "publisher": "codestrap",
  "version": "0.5.8",
  "description": "GUI for the Codestrap CLI (passwd, config, extensions, github) in a side panel.",
  "icon": "icon.svg",
  "engines": { "vscode": "^1.70.0" },
  "main": "./extension.js",
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "vsce": "^2.15.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run build || echo 'no build step' && npm prune --production",
    "package": "vsce package",
    "postinstall": "npm rebuild node-pty --runtime=node --force || true"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:codestrap.view",
    "onCommand:codestrap.open",
    "onCommand:codestrap.refresh"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        { "id": "codestrap", "title": "Codestrap", "icon": "sidepanel/icon.svg" }
      ]
    },
    "views": {
      "codestrap": [
        { "type": "webview", "id": "codestrap.view", "name": "Codestrap" }
      ]
    },
    "commands": [
      { "command": "codestrap.open", "title": "Codestrap: Open Sidebar" },
      { "command": "codestrap.refresh", "title": "Codestrap: Refresh Panel" }
    ],
    "viewsWelcome": [
      {
        "view": "codestrap.view",
        "contents": "Run any Codestrap command from the sections below.\n"
      }
    ]
  }
}